{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "settings": {
    "browser": {
      "headless": true,
      "timeout": 30000
    },
    "accessibility": {
      "enabled": true,
      "strict": false
    }
  }
}
